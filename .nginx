server {
  server_name yofitofi.kellpro.com yofitofi.kellpro.test;
  root /var/www/yofi;

  set $public 0;
  if (-f $document_root/public$uri) {
    set $public 1;
    rewrite (.*) /public$1;
  }

  if ($public = 0) {
    rewrite (.*) /index.php;
  }

  location ~ \.php$ {
    include fastcgi.conf;
    fastcgi_pass unix:/run/php/php7.1-fpm.sock;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/yofitofi.kellpro.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/yofitofi.kellpro.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = yofitofi.kellpro.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  server_name yofitofi.kellpro.com yofitofi.kellpro.test;
  listen 80;
  listen 8090;
    return 404; # managed by Certbot


}